<h4>Category</h4>
<h5><%= @category.name %></h5>	
	<span class: 'small'><%= @category.updated_at%></span></p>
	<% if logged_in?%>
		<%= link_to "Edit", edit_category_path(@category), class: "btn btn-success"%>
	<% end %>
	<%= link_to "Back to Index", categories_path, class: "btn btn-link" %>
<hr />
	<% @category.posts.each do |post| %>
	<%= render 'posts/post', post: post %>
	<% end %>