<%# partial entered into new, edit forms%>
<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>


<%= f.label :title %>
<%= f.text_field :title %>
<br/>
<%= f.label :description %>
<%= f.text_area :description %>

<br/>
<%= f.label :url %>
<%= f.text_field :url %>
<br/>
<div class='control-group'>
	<%= f.label "Categories" %>
	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
<% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text } %>
<% end %>
</div>
<%= f.submit (@post.new_record? ? "Create New Post" : "Update Post"), class: 'btn btn-success'%>
<%= link_to 'Back', request.referer, class: 'btn btn-link '%>

<% end %>
 