<div class="row">
	<div class="span0 well text-center">
		<% if logged_in? %>
			<%= link_to vote_post_path(post, vote: true), method: 'post' do %>
				<i class='icon-arrow-up'></i>
			<% end %>
		<% end %>
		<%= post.up_votes %>
		<br/>
		Votes
		<br/>
		<% if logged_in? %>
			<%= link_to vote_post_path(post, vote: false), method: 'post' do %>
				<i class='icon-arrow-down'></i>
			<% end %>
		<% end %>
		<%= post.down_votes %>
	</div>  

	<div class= "span8 well well-lg">
	<% post.categories.each do |category| %>
	<span class="badge">
	<%= link_to category[:name], category_path(category) %>
  </span>
	<% end %>
	<span class="pull-right quiet"><%= ozdate(post.created_at) %></span>
	<h5>
	<span><%=link_to post.title, post_path(post) %></span>
	<% if params[:controller] != 'users'%>
	<span class="muted"> by </span> 
		<%= link_to post.user.username.titleize, user_path(post.user) %>
	<% end %>
	</h5>
<em>
	"<%= post.description %>"
</em>
	<br/>
	<%=link_to(post.url, "#{fix_url(post.url)}") %>
	<br/>
	<% if params[:action] == 'index' %>
	<%= link_to "#{post.comments.size} Comments", post_path(post)  %>
	<% end %>
		<% if logged_in? %>
			<% if post[:user_id] == current_user[:id] %>
			<span class="pull-right">	<%= link_to "Edit Post", edit_post_path(post)%>
			<% end %>
		<% end %>
	</div>
</div>