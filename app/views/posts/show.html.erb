<h4>Post</h4>
<div class="well">
<h5><%= @post.title %></h5>	
<p>	<%= @post.description %><br/>
	<%= @post.url %><br/>
	<span class="quiet"><%= ozdate(@post.updated_at)%></span></p>
</div>
	<%= form_for [@post,@comment] do |f| %>
	<%= render 'shared/errors', obj: @comment %>
	<div class='control-group'>
		<%= f.label :body, 'Leave a comment'%>
		<%= f.text_area :body, rows: 3, class: 'span4' %>
	</div>
	<%= f.submit class: "btn btn-small btn-success" %>
	<% end %>
	<h5>Comments:</h5>
	<% @post.comments.each do |comment| %>
	
<div class="well well-small">
	<em>"<%= comment.body %>"</em><br>
	<%= link_to comment.user.username , '' %>
	<span class="quiet"> <%=ozdate(comment.created_at)%>
</div>

<% end %>
	